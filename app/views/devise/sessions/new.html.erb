<% content_for :title do %>
  ログイン
<% end %>
<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="bg-light d-flex justify-content-center pt-5" style="width: 100vw; height: 100vh;">
    <div class="d-flex align-items-center border mt-5 pt-5 px-4" style="width: 50vh; height: 50%;">
      <div class="container mx-auto" style="width: 50vw; height: 50vh;">
        <h1 class="border-bottom my-5 py-2">ログイン</h1>
        <%= render "helper/error_messages", model: f.object %>
        <form>
          <div class="form-group">
            <label for="signInEmail">メールアドレス</label>
            <%= f.email_field :email, class: "form-control", id: "signInEmail", ariadescribedby: "emailHelp", placeholder: "メールアドレス" %>
          </div>
          <div class="form-group mt-4">
            <label for="signInPassword">パスワード</label>
            <%= f.password_field :password, class: "form-control", id: "signInPassword", placeholder:"パスワード" %>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-primary mt-4" style="width: 30%;">ログイン</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>