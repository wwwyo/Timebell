<% content_for :title do %>
  アカウント作成
<% end %>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <div class="bg-light d-flex justify-content-center pt-5" style="width: 100vw; height: 100vh;">
    <div class="d-flex align-items-center border mt-5 pt-1 px-4" style="width: 50vh; height: 70%;">
      <div class="container mx-auto" style="width: 50vw; height: 50vh;">
        <h2 class="border-bottom pb-2">新規登録</h2>
        <%= render "helper/error_messages", model: f.object %>
        <form class="pt-3">
          <div class="form-group my-3">
            <label for="nickname">ニックネーム<span class="badge badge-danger">必須</span></label>
            <%= f.text_field :nickname, class: "form-control", id: "nickname", placeholder: "ご利用時に表示されます", maxlength: "20" %>
          </div>
          <div class="form-group my-3">
            <label for="InputEmail">メールアドレス</label>
            <%= f.email_field :email, class: "form-control", id: "InputEmail", aria_describedby: "emailHelp", placeholder: "PC/携帯どちらでも可" %>
          </div>
          <div class="form-group my-3">
            <label for="InputPassword">パスワード</label>
            <%= f.password_field :password, class: "form-control", id: "InputPassword", placeholder: "6文字以上の半角英数字" %>
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mt-4" style="width: 30%;">登録</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
